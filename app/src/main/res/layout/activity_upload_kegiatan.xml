<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Upload.UploadKegiatanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        android:background="@color/gold"
        app:titleTextColor="#fff"
        android:theme="@style/AppTheme.ActionBar"
        android:elevation="0dp"/>

    <EditText
        android:id="@+id/txt_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="@string/upload_kegiatan_judul"
        android:padding="@dimen/padding10"
        android:textAlignment="center"
        android:textSize="@dimen/text16" />

    <include
        layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:src="@drawable/location"
            android:scaleType="centerInside"
            android:layout_margin="@dimen/padding5"
            android:padding="@dimen/padding5"/>

        <EditText
            android:id="@+id/txt_tempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="@string/upload_kegiatan_tempat"
            android:padding="@dimen/padding10"
            android:textSize="@dimen/text16" />

    </LinearLayout>

    <include
        layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:src="@drawable/calender"
            android:scaleType="centerInside"
            android:layout_margin="@dimen/padding5"
            android:padding="@dimen/padding5"/>

        <TextView
            android:id="@+id/txt_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="@string/upload_kegiatan_waktu"
            android:padding="@dimen/padding10"
            android:textSize="@dimen/text16" />

    </LinearLayout>

    <include
        layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:src="@drawable/pencil"
            android:scaleType="centerInside"
            android:layout_margin="@dimen/padding5"
            android:padding="@dimen/padding5"/>

        <EditText
            android:id="@+id/txt_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="@string/upload_kegiatan_deskripsi"
            android:padding="@dimen/padding10"
            android:textSize="@dimen/text16" />
    </LinearLayout>
</LinearLayout>