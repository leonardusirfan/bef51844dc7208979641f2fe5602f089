<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp10">

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="@dimen/medium_icon_size"
        android:layout_height="@dimen/medium_icon_size"
        android:src="@drawable/ic_cb_uncheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:textSize="@dimen/sp16"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:minLines="2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_check"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_deskripsi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp14"
        android:layout_marginTop="@dimen/dp5"
        app:layout_constraintEnd_toEndOf="@+id/txt_service"
        app:layout_constraintTop_toBottomOf="@+id/txt_service"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/lbl_sampai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="Perkiraan Sampai : "
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_deskripsi" />

    <TextView
        android:id="@+id/txt_sampai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp16"
        app:layout_constraintStart_toEndOf="@+id/lbl_sampai"
        app:layout_constraintTop_toBottomOf="@+id/txt_deskripsi" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="Biaya : "
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_harga"
        app:layout_constraintTop_toBottomOf="@+id/lbl_sampai" />

    <TextView
        android:id="@+id/txt_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_sampai" />

    <TextView
        android:id="@+id/txt_catatan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp14"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_harga"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>