<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding2"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/layout_merchandise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/artis_item_height_thumbnail"
        android:transitionName="artis"
        app:cardCornerRadius="@dimen/padding5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.leonardus.irfan.TopCropImageView
                android:id="@+id/img_merchandise"
                android:contentDescription="@string/artis"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_donasi"
                android:layout_width="@dimen/medium_icon_size"
                android:layout_height="@dimen/medium_icon_size"
                android:layout_margin="@dimen/dp10"
                android:src="@drawable/donasi"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txt_merchandise"
        android:padding="@dimen/padding5"
        android:layout_marginTop="@dimen/padding10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="@dimen/text12"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end"
        android:layout_weight="0.2"
        android:gravity="center_horizontal"/>
</LinearLayout>