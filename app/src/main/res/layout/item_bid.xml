<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding5">

        <com.leonardus.irfan.TopCropCircularImageView
            android:id="@+id/img_bidder"
            android:layout_width="@dimen/profile_size_small"
            android:layout_height="@dimen/profile_size_small"
            android:textSize="@dimen/text12"
            android:textColor="#000"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!--<include layout="@layout/view_divider"
        android:layout_height="match_parent"
        android:layout_width="@dimen/padding1"/>-->

    <TextView
        android:id="@+id/txt_bid"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:padding="@dimen/padding10"
        android:textSize="@dimen/text12"
        android:textColor="#000"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>