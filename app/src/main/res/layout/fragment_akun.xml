<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_akun_album"
                android:contentDescription="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tint="#7d000000"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <ImageView
                android:id="@+id/img_akun"
                android:padding="@dimen/padding10"
                android:layout_width="@dimen/profile_size"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/img_akun">

                <TextView
                    android:id="@+id/txt_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text24"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text16"
                    android:textColor="#fff"
                    android:text="Edit Profil"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:gravity="center_vertical"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:padding="@dimen/padding10">

            <TextView
                android:id="@+id/txt_berlangganan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/txt_lihat_semua"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Berlangganan : 0"
                android:textSize="@dimen/text14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_lihat_semua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lihat semua"
                android:layout_alignParentEnd="true"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="@dimen/text12"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingBottom="@dimen/padding5"
                android:textStyle="bold"
                android:textSize="@dimen/text18"/>

            <TextView
                android:id="@+id/txt_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingEnd="@dimen/padding10"
                android:paddingBottom="@dimen/padding5"
                android:textSize="@dimen/text14" />

            <include layout="@layout/view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding1"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginBottom="@dimen/padding5"
                android:background="#6c6c6c"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingEnd="@dimen/padding10"
                android:paddingBottom="@dimen/padding5"
                android:text="Pembayaran"
                android:textSize="@dimen/text18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingEnd="@dimen/padding10"
                android:paddingBottom="@dimen/padding5"
                android:text="Bank BCA"
                android:textSize="@dimen/text14" />

            <include
                layout="@layout/view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding1"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginBottom="@dimen/padding5"
                android:background="#6c6c6c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingEnd="@dimen/padding10"
                android:paddingBottom="@dimen/padding5"
                android:text="Rekening BCA"
                android:textSize="@dimen/text18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingEnd="@dimen/padding10"
                android:paddingBottom="@dimen/padding5"
                android:text="0987654567898"
                android:textSize="@dimen/text14" />

            <include
                layout="@layout/view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding1"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginBottom="@dimen/padding5"
                android:background="#6c6c6c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telepon"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingBottom="@dimen/padding5"
                android:textStyle="bold"
                android:textSize="@dimen/text18"/>

            <TextView
                android:id="@+id/txt_telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingEnd="@dimen/padding10"
                android:paddingBottom="@dimen/padding5"
                android:textSize="@dimen/text14" />

            <include layout="@layout/view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding1"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginBottom="@dimen/padding5"
                android:background="#6c6c6c"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingBottom="@dimen/padding5"
                android:textStyle="bold"
                android:textSize="@dimen/text18"/>

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingEnd="@dimen/padding10"
                android:paddingBottom="@dimen/padding5"
                android:textSize="@dimen/text14" />

            <include layout="@layout/view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding1"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginBottom="@dimen/padding5"
                android:background="#6c6c6c"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingBottom="@dimen/padding5"
                android:textStyle="bold"
                android:textSize="@dimen/text18"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:paddingTop="@dimen/padding5"
                android:paddingBottom="@dimen/padding5"
                android:text="**********"
                android:textSize="@dimen/text14"/>

            <include layout="@layout/view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding1"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginBottom="@dimen/padding5"
                android:background="#6c6c6c"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginBottom="@dimen/padding10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10"
                android:textColor="@color/orange"
                android:text="Logout"
                android:textStyle="bold"
                android:textSize="@dimen/text18"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>