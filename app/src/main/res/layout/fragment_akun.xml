                android:paddingTop="@dimen/padding5"
                android:paddingBottom="@dimen/padding5"
                android:textStyle="bold"
                android:textSize="@dimen/text18"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
