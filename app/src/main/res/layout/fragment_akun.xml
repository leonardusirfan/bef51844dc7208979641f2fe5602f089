<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="?android:attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_akun_album"
                android:contentDescription="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tint="#7d000000"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <com.leonardus.irfan.TopCropCircularImageView
                android:id="@+id/img_akun"
                android:layout_width="@dimen/profile_size"
                android:layout_height="@dimen/profile_size"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/padding5"
                android:contentDescription="@string/user" />

            <LinearLayout
                android:id="@+id/layout_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/img_akun">

                <TextView
                    android:id="@+id/txt_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text24"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text16"
                    android:textColor="#fff"
                    android:text="@string/profil_edit"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>

            </LinearLayout>
        </RelativeLayout>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="@dimen/dp20"
            app:cardCornerRadius="@dimen/dp15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding15">

                <TextView
                    android:id="@+id/txt_berlangganan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/txt_lihat_semua"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:text="@string/profil_berlangganan"
                    android:textSize="@dimen/text16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_lihat_semua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lihat_semua"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="@dimen/text12"/>
            </RelativeLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            app:cardCornerRadius="@dimen/dp15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profil_alamat"
                    android:paddingStart="@dimen/padding10"
                    android:paddingEnd="@dimen/padding10"
                    android:paddingTop="@dimen/padding5"
                    android:textStyle="bold"
                    android:textSize="@dimen/text14"/>

                <TextView
                    android:id="@+id/txt_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding10"
                    android:paddingEnd="@dimen/padding10"
                    android:paddingBottom="@dimen/padding5"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/text16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profil_telepon"
                    android:paddingStart="@dimen/padding10"
                    android:paddingEnd="@dimen/padding10"
                    android:paddingTop="@dimen/padding5"
                    android:layout_marginTop="@dimen/dp5"
                    android:textStyle="bold"
                    android:textSize="@dimen/text14"/>

                <TextView
                    android:id="@+id/txt_telepon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding10"
                    android:paddingEnd="@dimen/padding10"
                    android:paddingBottom="@dimen/padding5"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/text16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profil_email"
                    android:paddingStart="@dimen/padding10"
                    android:paddingEnd="@dimen/padding10"
                    android:paddingTop="@dimen/padding5"
                    android:layout_marginTop="@dimen/dp5"
                    android:textStyle="bold"
                    android:textSize="@dimen/text14"/>

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding10"
                    android:paddingEnd="@dimen/padding10"
                    android:paddingBottom="@dimen/padding5"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/text16" />

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:id="@+id/layout_transaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="@dimen/dp20"
            app:cardCornerRadius="@dimen/dp15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:text="Transaksi"
                    android:textSize="@dimen/text16"
                    android:textStyle="bold" />

                <com.leonardus.irfan.TopCropCircularImageView
                    android:id="@+id/img_transaksi"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@color/colorAccent"
                    android:visibility="invisible"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </android.support.design.card.MaterialCardView>

